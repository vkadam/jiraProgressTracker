<form id="jira-tracker" class="form-horizontal">
	<div class="form-group">
		<label class="control-label col-lg-3 col-lg-3" for="releaseTitle">Release Title</label>
		<div class="col-lg-7">
			<input class="form-control" type="text" id="releaseId" name="releaseId" placeholder="Release Spreadsheet Id" />
			<input class="form-control" type="text" id="releaseTitle" name="releaseTitle" placeholder="Release Spreadsheet Title" />
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-lg-3" for="snapshotTitle">Snapshot Title</label>
		<div class="col-lg-7">
			<input class="form-control" type="text" id="snapshotTitle" name="snapshotTitle" placeholder="Snapshot Title"/>
		</div>
	</div>
	<div class="form-group">
		<label class="control-label col-lg-3" for="jiraJQL">Jira JQL</label>
		<div class="col-lg-7">
			<textarea class="form-control" id="jiraJQL" name="jiraJQL" placeholder="Jira JQL" rows="4"></textarea>
			<input class="form-control hide" id="jiraMaxResults" name="jiraMaxResults" placeholder="Max Results" value="999" />
		</div>
	</div>
	<div class="form-group">
		<div class="col-lg-9 pull-right">
			<button type="button" class="btn load-release">Load Release</button>
			<button type="button" class="btn create-release">Create Release</button>
			<button type="button" class="btn create-snapshot">Create Snapshot</button>
			<button type="button" class="btn compare-snapshot">Compare Snapshots</button>
		</div>
	</div>
</form>
<div class="summary-group"></div>